<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="25dp"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_java"
            card_view:cardBackgroundColor="#aae6f7"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Java"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="15dp"
            android:id="@+id/cardview_testing"
            card_view:cardBackgroundColor="#aae6f7"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="Software Testing"
                android:textColor="@android:color/black" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="15dp"
            android:id="@+id/cardview_web_technology"
            card_view:cardBackgroundColor="#aae6f7"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Web Technology"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="15dp"
            android:id="@+id/cardview_big_data"
            card_view:cardBackgroundColor="#aae6f7"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Big Data"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="15dp"
            android:id="@+id/cardview_sap"
            card_view:cardBackgroundColor="#aae6f7"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="Sap"
                android:textColor="@android:color/black" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="15dp"
            android:id="@+id/cardview_dot_net"
            card_view:cardBackgroundColor="#aae6f7"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Asp.net"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="15dp"
            android:id="@+id/cardview_oracle"
            card_view:cardBackgroundColor="#aae6f7"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Oracle"/>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_marginTop="15dp"
            android:id="@+id/cardview_data_warehouse"
            card_view:cardBackgroundColor="#aae6f7"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Data WareHouse"/>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:id="@+id/cardview_java_script"
            card_view:cardBackgroundColor="#aae6f7"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Java Script"/>
        </android.support.v7.widget.CardView>


    </LinearLayout>

</LinearLayout>
</ScrollView>